.row
  .span8
    .page-header
      %h2 Edit your Account details
      
    = bootstrap_form_for [current_user], :html => {:class => 'form-horizontal'} do |f|
      = f.control_group :paypal do
        = f.text_field :paypal
      
      .form-actions
        = f.submit nil, :class => 'btn btn-primary'
        = link_to 'Cancel', exercises_path, :class => 'btn'
    