<div>
  <%= form_for @user, :as => :user, :url => account_path(@user), :method => :put, :html => {:class => 'form-horizontal'} do |f| %>
    <fieldset>
      
      <div class='row'>
        <div class='span12'>
          <div class='page-header'>
            <h2>Edit your PayPal account details</h2>
          </div>  
  
          <%= f.label :paypal do %>
            <%= f.text_field :paypal, :class => 'span4', :placeholder => 'mypaypal@email.com' %>
          <% end %>  
          
          <br />
  
          <%= f.submit "Update", :class => 'btn btn-success' %>
          <%= link_to 'Cancel', exercises_path, :class => 'btn' %>
       
        </div>
      </div>  
         
    </fieldset>
  <% end %>